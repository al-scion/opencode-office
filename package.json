{
  "name": "opencode-office",
  "version": "0.1.1",
  "description": "Microsoft Office plugin for OpenCode",
  "author": {
    "name": "al-scion",
    "email": "abel@withscion.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al-scion/opencode-office.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist --target bun && bun x tsc",
    "lint": "biome lint src",
    "lint:fix": "biome check --write --unsafe src",
    "format": "biome format --write src",
    "test": "bun test",
    "publish:npm": "bash ./scripts/publish.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@opencode-ai/plugin": "^1.1.16",
    "@types/node": "^20.11.5",
    "bun-types": "latest",
    "vitest": "^3.2.4"
  }
}
